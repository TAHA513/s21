
# هذا ملف مثال للمتغيرات البيئية
# انسخ هذا الملف إلى .env وقم بتعديل القيم حسب بيئتك

# إعدادات قاعدة البيانات
# يمكنك استخدام DATABASE_URL للاتصال بقاعدة البيانات باستخدام عنوان URL واحد
DATABASE_URL="postgresql://username:password@hostname:5432/database_name"

# أو يمكنك استخدام المتغيرات المنفصلة
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="your_database"
DB_USER="your_username"
DB_PASSWORD="your_password"
DB_SSL="false"
DB_POOL_MAX="20"
DB_IDLE_TIMEOUT="30000"
DB_CONNECTION_TIMEOUT="5000"

# سر الجلسة (للأمان)
SESSION_SECRET="secret-key-change-in-production"

# إعدادات بيئة التطوير
NODE_ENV="development"
PORT="5000"
